<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.chen91apps.echos">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/intenet"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/Mytheme">
        <activity
            android:name=".ViewActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:screenOrientation="portrait"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.chen91apps.echos.MainActivity" />
        </activity>
        <activity
            android:name=".NewPostActivity"
            android:parentActivityName=".MainActivity"
            android:windowSoftInputMode="adjustResize">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.chen91apps.echos.MainActivity" />
        </activity>
        <activity
            android:name=".ChannelActivity"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.chen91apps.echos.MainActivity" />
        </activity>
        <activity
            android:name=".SearchResultActivity"
            android:parentActivityName=".SearchActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.chen91apps.echos.MainActivity" />
        </activity>
        <activity
            android:name=".SearchActivity"
            android:launchMode="singleTop"
            android:parentActivityName=".MainActivity"
            android:windowSoftInputMode="adjustResize">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.chen91apps.echos.MainActivity" />
        </activity>
        <activity
            android:name=".FeedbackActivity"
            android:parentActivityName=".MainActivity"
            android:windowSoftInputMode="adjustResize">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.chen91apps.echos.MainActivity" />
        </activity>
        <activity
            android:name=".HistoryActivity"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.chen91apps.echos.MainActivity" />
        </activity>
        <activity
            android:name=".FavoritesActivity"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.chen91apps.echos.MainActivity" />
        </activity>
        <activity
            android:name=".CommentsActivity"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.chen91apps.echos.MainActivity" />
        </activity>
        <activity
            android:name=".PostActivity"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.chen91apps.echos.MainActivity" />
        </activity>
        <activity
            android:name=".UserInfoActivity"
            android:label="@string/text_user"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.chen91apps.echos.MainActivity" />
        </activity>
        <activity
            android:name=".LoginActivity"
            android:label="@string/text_login"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.chen91apps.echos.MainActivity" />
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:label="@string/menu_settings"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.chen91apps.echos.MainActivity" />
        </activity>

        <meta-data
            android:name="com.google.android.actions"
            android:resource="@xml/intenet" />

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>