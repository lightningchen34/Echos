<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/background_color"
    android:orientation="vertical"
    android:padding="20dp">

    <LinearLayout
        android:id="@+id/comment_quote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/background2_color"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/comment_quote_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="?attr/undertint_color"
            android:text="引用 lightning34："/>

        <TextView
            android:id="@+id/comment_quote_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="?attr/undertint_color"
            android:text="哈哈哈哈，这是评论的内容"
            android:padding="10dp"/>

        <TextView
            android:id="@+id/comment_quote_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="?attr/undertint_color"
            android:text="时间："/>

    </LinearLayout>

</LinearLayout>
