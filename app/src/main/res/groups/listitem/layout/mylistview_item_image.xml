<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/mylistview_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/mylistview_item_padding"
            android:textSize="@dimen/mylistview_item_titlesize"
            android:textColor="?attr/text_color"
            android:text="这是一个标题这是一个标题这是一个标题这是一个标题"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingBottom="@dimen/mylistview_item_padding">

            <ImageView
                android:id="@+id/mylistview_item_image_1"
                android:layout_width="@dimen/mylistview_imageitem_image_width"
                android:layout_height="@dimen/mylistview_imageitem_image_width"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:layout_marginRight="@dimen/mylistview_imageitem_spacing"
                android:src="@drawable/ic_broken_image"/>


            <ImageView
                android:id="@+id/mylistview_item_image_2"
                android:layout_width="@dimen/mylistview_imageitem_image_width"
                android:layout_height="@dimen/mylistview_imageitem_image_width"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:layout_marginLeft="@dimen/mylistview_imageitem_spacing"
                android:layout_marginRight="@dimen/mylistview_imageitem_spacing"
                android:src="@drawable/ic_broken_image"/>


            <ImageView
                android:id="@+id/mylistview_item_image_3"
                android:layout_width="@dimen/mylistview_imageitem_image_width"
                android:layout_height="@dimen/mylistview_imageitem_image_width"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:layout_marginLeft="@dimen/mylistview_imageitem_spacing"
                android:src="@drawable/ic_broken_image"/>

        </LinearLayout>

    </LinearLayout>




</LinearLayout>
