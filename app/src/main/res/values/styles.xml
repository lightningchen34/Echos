<resources>

    <style name="Mytheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorSecondary</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
        
        <item name="background_color">#ffffffff</item>
        <item name="background2_color">#ffdddddd</item>
        <item name="text_color">#ff000000</item>
        <item name="edge_color">#FFFFFFFF</item>
        <item name="highlight_color">@color/colorPrimary</item>
        <item name="undertint_color">#FF585858</item>
        
        <item name="separator_color">#dddddd</item>
    </style>

    <style name="Mytheme.Night" parent="Mytheme">
        <item name="colorPrimary">#ff111111</item>
        <item name="colorPrimaryDark">@color/colorSecondaryDark</item>

        <item name="background_color">#ff333338</item>
        <item name="background2_color">#ff222222</item>
        <item name="text_color">#ffBBBBBB</item>
        <item name="edge_color">#ffDDDDDD</item>
        <item name="highlight_color">#ffffffff</item>
        <item name="undertint_color">#FF585858</item>
    </style>

</resources>
