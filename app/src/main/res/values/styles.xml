<resources>

    <style name="Mytheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorSecondary</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        
        <item name="background_color">#ffffffff</item>
        <item name="text_color">#ff000000</item>
        <item name="edge_color">#FF232323</item>
        <item name="highlight_color">@color/colorPrimary</item>
    </style>

    <style name="Mytheme.Night" parent="Mytheme">
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorSecondaryDark</item>

        <item name="background_color">#ff222222</item>
        <item name="text_color">#ff888888</item>
        <item name="edge_color">#ff666666</item>
        <item name="highlight_color">#ff888888</item>
    </style>

</resources>
